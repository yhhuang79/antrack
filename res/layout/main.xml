<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <fragment
        android:id="@+id/map"
        class="tw.plash.antrack.AntrackSupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" />
    
    <!-- <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" /> -->

    <ImageButton
        android:id="@+id/fixlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15dip"
        android:background="@color/button_state"
        android:padding="3dip"
        android:scaleType="fitCenter"
        android:src="@drawable/device_access_location_found"/>

    <tw.plash.antrack.AntrackViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="@color/android_blue"
        android:padding="4dip" >

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:background="@color/action_button_state"
            android:scaleType="center"
            android:src="@drawable/action_settings" />
        
        <Button
            android:id="@+id/controlbutton"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_toRightOf="@+id/settings"
            android:layout_toLeftOf="@+id/camera"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@color/action_button_state"
            android:text="BUTTON 1"
            android:textColor="@color/android_blue" />

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:background="@color/action_button_state"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/device_access_camera" />

        <!-- <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:layout_toRightOf="@+id/camera"
            android:background="@android:color/white"
            android:enabled="false"
            android:text="Settings"	
            android:layout_centerVertical="true"
            android:textColor="@color/android_blue" /> -->
    </RelativeLayout>

</RelativeLayout>