<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" />

    <ImageButton
        android:id="@+id/fixlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dip"
        android:layout_marginTop="15dip"
        android:background="@color/button_state"
        android:padding="3dip"
        android:scaleType="fitCenter"
        android:src="@drawable/device_access_location_found" 
        android:visibility="gone"/>

    <tw.plash.antrack.AntrackViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer" >

        <!--
        <android.support.v4.view.PagerTabStrip
            android:id="@+id/pager_tab_strip"
            android:layout_width="match_parent"
            android:layout_height="32dip" 
            android:layout_gravity="top"
            android:background="@color/light_light_blue"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#fff"/>
        -->
    </tw.plash.antrack.AntrackViewPager>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/pseudoactionbarbg"
        android:orientation="horizontal"
        android:padding="3dip"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/controlbutton"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="0.5"
            android:text="BUTTON 1" />

        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_margin="3dip"
            android:layout_weight="0.5"
            android:text="Take a Picture" 
            android:enabled="false"/>
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="@color/light_light_blue"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>