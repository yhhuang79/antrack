<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTexts</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/android_blue</item>
        <item name="backgroundStacked">@color/android_blue</item>
    </style>
    
    <style name="MyActionBarTabs" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/custom_tab_stack</item>
    </style>

    <style name="MyActionBarTexts" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/custom_tab_text</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>